extends layout

block content
  div(id="leftDiv")
    img(src="ref/indexHeader.png" id="indexHeader")
    //- h3 WELCOME TO
    //- h1(id="indexHeader" class="selector") Express Gallery
    a(href="/new_photo")
      img(src="ref/add_button_1.png" id="addButton")
  div(id="rightDiv")
    each picture in pictures
      div(class="photoDiv" id=picture.id)
        a(href="/gallery/" + picture.id)
          img(src="#{picture.url}" class="photo")
        p Author: #{picture.author}
        p Description: #{picture.description}
        div(class="buttonsDiv clearfix")
          a(href="/gallery/" + picture.id class="butt")
            img(src="ref/view_button_1.png" class="viewButton")
          a(href="/gallery/" + picture.id + "/edit" class="butt")
            img(src="ref/edit_button_1.png" class="editButton")
          form(class="deleteForm" action="/gallery/#{picture.id}" method="POST")
            button(type="submit")
              img(
                src="ref/delete_button_1.png"
                class="deleteButton")
            input(type="hidden" name="_method" value="DELETE")
